{% load outbound_extras %}
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<document type="freeswitch/xml">
  <section name="dialplan">
    <context name="{{ context }}">
      <extension name="bridge">
        <condition regex="all">
          <regex field="destination_number" expression="^{{ dest_number }}$"/>
          <action application="set" data="inherit_codec=true"/>
          <action application="export" data="_nolocal_rtp_secure_media=true"/>
          <!--action application="info"/-->
          <action application="bridge" data="{% get_dialstring caller dest_number gateway %}"/>
        </condition>
      </extension>
    </context>
  </section>
</document>
